<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_header" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_ingres"
        android:layout_marginTop="34dp"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_click_to"
        android:id="@+id/txtClickTo"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_start_menu"
        android:id="@+id/btnStartMenu"
        android:layout_below="@+id/txtClickTo"
        android:layout_centerHorizontal="true"
        android:onClick="btnStartMenuClick"
        android:background="#ffffff"
        android:textSize="25dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_create_account"
        android:id="@+id/btnCreateAccount"
        android:layout_below="@+id/btnStartMenu"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:onClick="btnCreateAccountClick"
        android:background="#ffffff"
        android:textSize="15dp" />

</LinearLayout>